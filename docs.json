{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mailkick",
  "colors": {
    "primary": "#F97316",
    "light": "#FB923C",
    "dark": "#EA580C"
  },
  "fonts": {
    "heading": { "family": "Funnel Display" },
    "body": { "family": "Inter" }
  },
  "modeToggle": {
    "default": "light"
  },
  "favicon": "/favicons/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Integrations",
            "pages": [
              "integrations/image-domain",
              "integrations/brevo",
              "integrations/customerio",
              "integrations/onesignal"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "/",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/images/logo.png",
    "dark": "/images/logo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Documentation",
        "href": "/"
      }
    ]
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/tideu2"
    }
  }
}
